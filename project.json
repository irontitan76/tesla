{
  "targets": {
    "format:imports": {
      "command": "node ./scripts/formatImports.js"
    },
    "format:json": {
      "command": "node ./scripts/formatJSON.js"
    },
    "install": {
      "command": "pnpm install"
    },
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "config": ".verdaccio/config.yml",
        "port": 4873,
        "storage": "tmp/local-registry/storage"
      }
    }
  }
}
