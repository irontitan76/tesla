{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "database/*": ["./database/*"],
      "docs/*": ["./docs/*"],
      "themes/*": ["./themes/*"],
      "views/*": ["./views/*"],
      "*": ["./*"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
  },
  "exclude": ["node_modules", "tmp"],
}
