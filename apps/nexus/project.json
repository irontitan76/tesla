{
  "name": "nexus",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/nexus",
  "tags": [],
  "targets": {
    "build": {
      "configurations": {
        "development": {
          "outputPath": "apps/nexus"
        },
        "production": {}
      },
      "defaultConfiguration": "production",
      "executor": "@nx/next:build",
      "options": {
        "outputPath": "dist/apps/nexus"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "nexus:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/nexus/**/*.{ts,tsx,js,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "serve": {
      "configurations": {
        "development": {
          "buildTarget": "nexus:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "nexus:build:production",
          "dev": false
        }
      },
      "defaultConfiguration": "development",
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "nexus:build",
        "dev": true,
        "port": 8000
      }
    },
    "test": {
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/nexus/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ]
    }
  }
}
